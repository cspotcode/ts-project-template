{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es6",
    "rootDir": "src",
    "outDir": "bin",
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "stripInternal": true,
    "noEmitHelpers": true,
    "pretty": true
  },
  "typedocOptions": {
    "includes": "src/docs",
    "json": "bin/docs/api.json",
    "media": "src/docs/media",
    "mode": "modules",
    "name": "{{project name}}",
    "out": "bin/docs",
    "readme": "README.md",
    "theme": "default"
  },
  "exclude": [
    "node_modules",
    ".idea",
    ".vscode",
    ".vagrant",
    "src/typings",
    "src/docs",
    "bin",
    "index.js",
    "index.d.ts"
  ]
}
